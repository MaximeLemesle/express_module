<%- include('../partials/header'); %>
<section class="container">

    <main class="main">

        <div class="title">
            <% if (isConnected) { %>
                <h2>Bienvenue sur la page d'accueil <%= username %> !</h2>
            <% } else { %>
                <h2>Bienvenue sur la page d'accueil...</h2>
            <% } %>
        </div>

        <div class="content">
            <div class="content__title">
                <h3 class="h3">Récupérer la date du jour</h3>
            </div>
            
            <div class="content__option">
                <h4 class="h4">Télécharger un fichier avec la date actuelle</h4>             

                <div class="content__buttons">

                    <form action="/download">
                        <button class="btn-primary" type="submit">Téléchargement de la date</button>
                    </form>

                </div>
            </div>

        </div>
    </main>

    <%- include('../partials/footer'); %>
