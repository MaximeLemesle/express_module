<section class="container">

    <main class="main">

        <div class="title">
            <% if (isConnected) { %>
                <h2>Bienvenue sur la page users <%= username %> !</h2>
            <% } else { %>
                <h2>Bienvenue sur la page users...</h2>
            <% } %>
        </div>

        <div class="content">
            <div class="content__title">
                <h3 class="h3">Utilisateur n°<%= id ? id : 0 %></h3>
