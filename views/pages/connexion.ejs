<%- include('../partials/header'); %>

<main class="main">

    <aside class="navbar">

    </aside>

    <% if (isConnected) { %>
        <h2>Bienvenue sur la page de connexion <%= username %> !</h2>

        <div>
            <a href="/deconnexion">DÃ©connexion</a>
        </div>

    <% } else { %>

        <h2>Bienvenue sur la page de connexion...</h2>

        <form method="post" action="/connexion">
            <div>
                <h3>Connexion</h3>
            </div>
            <% if (error) { %>
                <p role="alert"><%= error %></p>
            <% } %>
            <label for="login">Login</label>
            <input id="login" name="login" placeholder="Nom d'utilisateur" type="text" autocomplete="username" required>
            
            <label for="password">Password</label>
            <input id="password" name="password" placeholder="Mot de passe" type="password" autocomplete="current-password" required>
            
            <input type="submit" value="Valider">
        </form>

    <% } %>

</main>

